Display

<Display>:
    BoxLayout:
        padding: "15dp"
        orientation: "vertical"
        GridLayout:
            rows: 4
            TextInput:
                id: name
                text: "Enter image name (e.g., image.png)"
                size_hint: .5, 3
            Button:
                text: "Load Image"
                size_hint: .5, 3
                on_release: root.verify_image(name.text)
            Button:
                text: "Black and White"
                size_hint: .5, 3
            Button:
                text: "Inverse"
                size_hint: .5, 3
            Button:
                text: "Line Drawing"
                size_hint: .5, 3
            Button:
                text: "Pointilism"
                size_hint: .5, 3
            Button:
                text: "Sepia"
                size_hint: .5, 3
            Button:
                text: "Pixelate"
                size_hint: .5, 3
        Image:
            id: image
            source: root.display_image()
            size_hint: 1, 5